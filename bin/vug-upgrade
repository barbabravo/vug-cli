#!/usr/bin/env node

const program   = require('commander');
const ora       = require('ora');
const path      = require('path');

const utils     = require('../lib/utils.js');
const logger    = require('../lib/logger.js');

const CONSTANTS = require('../lib/constants.js');

const spawn     = require('child_process').spawn;

/** 
 * settings
 */
run();

function run() {
    var update      = spawn(process.platform==='win32'?'npm.cmd':'npm', ['install', '-g', CONSTANTS.BASE_GIT_PATH])

    var spinner = ora('正在更新vug，请等待...')
    spinner.start()

    update.on('close', code => {
        spinner.stop();
        var new_version = utils.getVersion(),
            new_bundleid = utils.getBundleid();
        if(code != 0){
            logger.fatal(`更新${new_version}失败，错误码 ${code}`);
        }else{
            logger.success(`更新成功，当前版本 ${new_version},版本号 ${new_bundleid}`);        
        }
    })
}